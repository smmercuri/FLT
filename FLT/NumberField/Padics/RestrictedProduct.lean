    (hp : p ‚àà x.indexSupport) :
    ‚Äñ(x.padicNatDen : ‚Ñö_[p])‚Äñ = (p.1 : ‚Ñù) ^ (-((x p).valuation.natAbs : ‚Ñ§)) := by
  simp only [padicNatDen, Nat.cast_prod, norm_prod, Nat.cast_pow, norm_pow]
